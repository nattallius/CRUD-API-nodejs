{
  "compilerOptions": {
    "target": "ES2015",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,     /* Redirect output structure to the directory. */
    "rootDir": "src"
  },
  "display": "Recommended",
  "include": ["src/**/*"],
  "exclude": ["node_modules",]
}